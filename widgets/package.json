{
  "name": "erxes-widgets",
  "version": "0.12.0",
  "description": "Embedable widget scripts server for erxes",
  "homepage": "https://erxes.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/erxes/erxes"
  },
  "bugs": "https://github.com/erxes/erxes/issues",
  "keywords": [
    "node",
    "express",
    "react",
    "typescript",
    "webpack",
    "graphql",
    "apollo"
  ],
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "yarn dev-server & yarn dev-webpack",
    "dev-server": "NODE_ENV=development nodemon -e ts server --exec ts-node",
    "dev-webpack": "webpack --mode development --watch --progress",
    "generateVersion": "ts-node ./server/generateVersion",
    "build": "yarn build-webpack && yarn build-server && yarn generateVersion",
    "build-server": "tsc --project tsconfig.server.json && cp -r ./server/views/ ./dist/",
    "build-webpack": "webpack --mode production --config=webpack.prod.config.js",
    "lint": "tslint 'client/**/*.@(ts|tsx)'",
    "format": "prettier --write 'client/**/*.@(ts|tsx)'",
    "precommit": "lint-staged",
    "start": "node dist"
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@types/react-transition-group": "^4.2.4",
    "add-graphql-subscriptions": "^1.0.1",
    "ajv": "^6.12.0",
    "apollo-cache-inmemory": "^1.6.5",
    "apollo-client": "^2.6.8",
    "apollo-link": "^1.2.13",
    "apollo-link-context": "^1.0.19",
    "apollo-link-error": "^1.1.12",
    "apollo-link-http": "^1.5.16",
    "apollo-link-ws": "^1.0.19",
    "apollo-utilities": "^1.3.3",
    "body-parser": "^1.19.0",
    "classnames": "^2.2.6",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "dotenv-webpack": "^1.7.0",
    "ejs": "^3.0.1",
    "erxes-icon": "^1.1.0",
    "express": "^4.17.1",
    "graphql": "^14.6.0",
    "graphql-tag": "^2.10.3",
    "i18n-react": "^0.7.0",
    "moment": "^2.24.0",
    "react": "16.13.0",
    "react-apollo": "^3.1.3",
    "react-datepicker": "^2.14.0",
    "react-dom": "16.13.0",
    "react-transition-group": "^4.3.0",
    "subscriptions-transport-ws": "^0.9.16",
    "xss": "^1.0.6"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.10",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.3",
    "@types/react": "^16.9.23",
    "@types/react-datepicker": "^2.11.0",
    "@types/react-dom": "^16.9.5",
    "@types/react-i18next": "^8.1.0",
    "@types/ws": "^7.2.2",
    "awesome-typescript-loader": "^5.2.1",
    "css-loader": "^3.4.2",
    "file-loader": "^6.0.0",
    "git-repo-info": "^2.1.1",
    "husky": "^4.2.3",
    "json-loader": "^0.5.7",
    "lint-staged": "^10.0.8",
    "node-sass": "^4.13.1",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "sass-loader": "^8.0.2",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.1.3",
    "ts-node": "^8.6.2",
    "tslint": "^6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "tslint-react": "^4.2.0",
    "typescript": "^3.8.3",
    "uglifyjs-webpack-plugin": "v2.2.0",
    "url-loader": "^4.0.0",
    "webpack": "4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-merge": "^4.2.2"
  },
  "engines": {
    "node": "10.x.x"
  }
}
