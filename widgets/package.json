{
  "name": "erxes-widgets",
  "description": "Embedable widget scripts server for erxes",
  "homepage": "https://erxes.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/erxes/erxes"
  },
  "bugs": "https://github.com/erxes/erxes/issues",
  "keywords": [
    "node",
    "express",
    "react",
    "typescript",
    "webpack",
    "graphql",
    "apollo"
  ],
  "private": true,
  "scripts": {
    "dev": "yarn dev-server & yarn dev-webpack",
    "dev-server": "NODE_ENV=development nodemon -e ts server --exec ts-node",
    "dev-webpack": "webpack --mode development --watch --progress",
    "generateVersion": "ts-node ./server/generateVersion",
    "build": "yarn build-webpack && yarn build-server && yarn generateVersion",
    "build-server": "tsc --project tsconfig.server.json && cp -r ./server/views/ ./dist/",
    "build-webpack": "webpack --mode production --config=webpack.prod.config.js",
    "lint": "tslint 'client/**/*.@(ts|tsx)'",
    "format": "prettier --write 'client/**/*.@(ts|tsx)'",
    "precommit": "lint-staged",
    "start": "node dist"
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@types/react-transition-group": "^2.0.14",
    "add-graphql-subscriptions": "^1.0.1",
    "ajv": "^6.10.2",
    "apollo-cache-inmemory": "^1.1.5",
    "apollo-client": "^2.3.7",
    "apollo-link": "^1.0.7",
    "apollo-link-context": "^1.0.3",
    "apollo-link-error": "^1.0.9",
    "apollo-link-http": "^1.5.4",
    "apollo-link-ws": "^1.0.8",
    "apollo-utilities": "^1.0.5",
    "body-parser": "^1.15.2",
    "classnames": "^2.2.5",
    "cors": "^2.8.3",
    "dotenv": "^4.0.0",
    "dotenv-webpack": "^1.7.0",
    "ejs": "^2.5.6",
    "erxes-icon": "^1.0.5",
    "express": "^4.14.0",
    "graphql": "^0.12.3",
    "graphql-tag": "^2.6.1",
    "i18n-react": "^0.6.4",
    "moment": "^2.21.0",
    "react": "16.4.2",
    "react-apollo": "^2.1.9",
    "react-datepicker": "^1.4.1",
    "react-dom": "16.4.2",
    "react-transition-group": "^2.4.0",
    "subscriptions-transport-ws": "^0.9.14",
    "xss": "^1.0.3"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.6",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/react": "^16.4.7",
    "@types/react-datepicker": "^1.1.5",
    "@types/react-dom": "^16.0.6",
    "@types/react-i18next": "^7.8.0",
    "@types/ws": "^5.1.2",
    "awesome-typescript-loader": "^5.2.0",
    "css-loader": "^0.27.3",
    "file-loader": "^1.1.11",
    "git-repo-info": "^2.1.0",
    "husky": "^0.14.3",
    "json-loader": "^0.5.4",
    "lint-staged": "^7.2.0",
    "node-sass": "^4.14.1",
    "nodemon": "^1.11.0",
    "prettier": "^1.13.7",
    "sass-loader": "^6.0.6",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.16.1",
    "ts-node": "^8.3.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "tslint-config-standard": "^7.1.0",
    "tslint-react": "^3.6.0",
    "typescript": "^2.9.2",
    "uglifyjs-webpack-plugin": "v1.0.0-beta.2",
    "url-loader": "^1.0.1",
    "webpack": "4.16.3",
    "webpack-cli": "^3.1.0",
    "webpack-merge": "^4.1.3"
  },
  "engines": {
    "node": ">=10.x.x"
  }
}
