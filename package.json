{
  "name": "erxes",
  "version": "0.6.0",
  "description": "erxes is an AI meets open source messaging platform for sales and marketing teams.",
  "homepage": "https://erxes.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/erxes/erxes"
  },
  "bugs": "https://github.com/erxes/erxes/issues",
