{
  "name": "erxes",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "add-graphql-subscriptions": "^1.0.1",
    "bat-d3-punchcard": "^1.0.1",
    "bootstrap": "^3.3.7",
    "classnames": "^2.2.5",
    "color": "^2.0.0",
    "crypto": "^1.0.1",
    "draft-js": "^0.10.0",
    "draft-js-export-html": "^1.2.0",
    "draft-js-mention-plugin": "^2.0.0-beta9",
    "draft-js-plugins-editor": "^2.0.0-beta9",
    "husky": "^0.14.3",
    "ionicons": "2.0.1",
    "lint-staged": "^4.3.0",
    "moment": "2.18.0",
    "prettier": "^1.7.4",
    "query-string": "^5.0.0",
    "react": "^16.0.0",
    "react-apollo": "^1.4.15",
    "react-bootstrap": "^0.31.3",
    "react-copy-to-clipboard": "^5.0.1",
    "react-datepicker": "^0.56.0",
    "react-dom": "^16.0.0",
    "react-ionicons": "^1.5.9",
    "react-markdown": "^2.5.0",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.0.14",
    "react-select-plus": "^1.0.0-rc.5",
    "react-sortable-hoc": "^0.6.8",
    "react-toggle": "^4.0.2",
    "recharts": "^1.0.0-alpha.6",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "strip": "^3.0.0",
    "styled-components": "^2.2.1",
    "subscriptions-transport-ws": "^0.8.2",
    "underscore": "^1.8.3"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "scripts": {
    "precommit": "lint-staged",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.2.12",
    "@storybook/addon-knobs": "^3.2.12",
    "@storybook/addon-links": "^3.2.12",
    "@storybook/react": "^3.2.12",
    "babel-plugin-styled-components": "^1.3.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).js?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ],
    "plugins": [
      "babel-plugin-styled-components"
    ]
  },
  "eslintConfig": {
    "extends": "react-app",
    "@storybook/react": "^3.2.12"
  }
}
