{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "@/*": [
        "./src/modules/*"
      ]
    },
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*spec.ts",
    "src/widget"
  ]
}