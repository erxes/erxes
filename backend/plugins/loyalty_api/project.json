{
  "name": "loyalty_api",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "backend/plugins/loyalty_api/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "cache": true,
      "options": {
        "cwd": "backend/plugins/loyalty_api",
        "commands": [
          "pnpm build"
        ]
      },
      "dependsOn": [
        "^build",
        "build:packageJson"
      ]
    },
    "build:packageJson": {
      "executor": "@nx/js:tsc",
      "options": {
        "main": "backend/plugins/loyalty_api/dist/src/main.js",
        "tsConfig": "backend/plugins/loyalty_api/tsconfig.build.json",
        "outputPath": "backend/plugins/loyalty_api/dist",
        "updateBuildableProjectDepsInPackageJson": true,
        "buildableProjectDepsInPackageJsonType": "dependencies"
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "typecheck",
        "build"
      ],
      "options": {
        "cwd": "backend/plugins/loyalty_api",
        "command": "NODE_ENV=development node dist/src/main.js"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "backend/plugins/loyalty_api",
        "command": "NODE_ENV=development pnpm dev"
      }
    },
    "docker-build": {
      "dependsOn": [
        "build"
      ],
      "command": "docker build -f backend/plugins/loyalty_api/Dockerfile . -t erxes/erxes-next-loyalty_api"
    }
  }
}