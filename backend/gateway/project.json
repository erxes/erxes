{
  "name": "gateway",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "backend/gateway/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "cache": true,
      "options": {
        "cwd": "backend/gateway",
        "commands": ["pnpm build"]
      },
      "dependsOn": ["^build", "build:packageJson"]
    },

    "build:packageJson": {
      "executor": "@nx/js:tsc",
      "options": {
        "main": "backend/gateway/dist/src/main.js",
        "tsConfig": "backend/gateway/tsconfig.build.json",
        "outputPath": "backend/gateway/dist",
        "updateBuildableProjectDepsInPackageJson": true,

        "buildableProjectDepsInPackageJsonType": "dependencies"
      }
    },

    "start": {
      "executor": "nx:run-commands",
      "dependsOn": ["typecheck", "build"],
      "options": {
        "cwd": "backend/gateway",
        "command": "NODE_ENV=development && node dist/src/main.js"
      }
    },

    "serve": {
      "executor": "nx:run-commands",

      "options": {
        "cwd": "backend/gateway",
        "command": "NODE_ENV=development pnpm dev"
      }
    },

    "docker-build": {
      "dependsOn": ["build"],
      "command": "docker build -f backend/gateway/Dockerfile . -t erxes/erxes-next-gateway"
    }
  }
}
