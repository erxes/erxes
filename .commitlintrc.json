{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "subject-case": [2, "always", "lower-case"],
    "type-enum": [
      2,
      "always",
      [
        "ci",
        "chore",
        "docs",
        "feat",
        "fix",
        "perf",
        "refactor",
        "revert",
        "style",
        "test",
        "setup",
        "build",
        "config",
        "deps"
      ]
    ]
  }
}
