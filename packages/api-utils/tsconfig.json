{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": ["es2015", "es6", "es7", "esnext.asynciterable"],
    "noImplicitAny": false,
    "skipLibCheck": true,
    "strict": true,
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"],
  // this must be a top level attribute
  "useUnknownInCatchVariables": false,
}