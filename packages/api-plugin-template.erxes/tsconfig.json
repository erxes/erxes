{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": ["es2015", "es2017", "es6", "es7", "esnext.asynciterable"],
    "noImplicitAny": false,
    "skipLibCheck": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "baseUrl": ".",
    "paths": {
      "@erxes/api-utils/*": ["../../api-utils/*"],
      "@packages/*" : ["../../*"]
    },
  },
  "exclude": ["node_modules", "dist"],
}
